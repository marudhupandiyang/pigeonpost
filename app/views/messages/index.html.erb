<div class="container">

	<span class="span9">

		<div class="tabbable tabs-left">
		  <ul class="nav nav-tabs" id="message_tab">
	 			<a class="" id= "compose_messsage" data-toggle="modal" href="#compose_new_message_modal">
					<i  title="Compose new Message" class=" icon-pencil"></i>
					Compose
				</a>
		    <li class="active"><a  data-toggle="tab" href="#inbox">Inbox</a></li>
		    <li><a  data-toggle="tab" href="#sentbox">Sentbox</a></li>
		    <li><a  data-toggle="tab" href="#deletebox">Trash</a></li>
		  </ul>

		  <div class="tab-content">
		    <div class="tab-pane active" id="inbox">
		    	<%= render 'table' ,:table_name => 'inbox' %>
		    </div>
		    <div class="tab-pane" id="sentbox">
		    	<%= render 'table' ,:table_name => 'sentbox' %>
		    </div>
		    <div class="tab-pane" id="deletebox">
		    	<%= render 'table' ,:table_name => 'deletebox' %>
		    </div>

		  </div>
		</div>

	</span>

</div>


  <!-- Modal -->
  <div id="compose_new_message_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="compose_new_message_Label" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="compose_new_message_modalLabel">Compose Message</h3>
    </div>
    <div class="modal-body">
      <p>
				<%= form_for @user.sent_messages.new ,:remote => true ,:html => {:class => 'form-horizontal'} do |newmsg|%>

					<div class="control-group">
						<%= newmsg.label :receiver_id ,:class => "control-label" %>
						<div class="controls">
							<%= newmsg.text_field :receiver_id %>
						</div>
					</div>

					<div class="control-group">
						<%= newmsg.label :subject ,:class => "control-label"  %>
						<div class="controls">
							<%= newmsg.text_field :subject %>
						</div>
					</div>

					<div class="control-group">
						<%= newmsg.label :message ,:class => "control-label"  %>
						<div class="controls">
							<%= newmsg.text_area :message ,:cols => 10 ,:rows => 8 %>
						</div>
					</div>

					<div class="control-group">
						<div class="controls">
							<%= newmsg.submit :class=> 'btn btn-primary' %>
						</div>
					</div>



				<% end %>
      </p>

    </div>
  </div>


  </div>
</div>
